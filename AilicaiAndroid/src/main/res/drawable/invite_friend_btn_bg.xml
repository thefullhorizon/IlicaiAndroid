        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <solid android:color="#4de84a01" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="0dp" />
                    <solid android:color="#e84a01" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="0dp" />
                    <solid android:color="@color/black_a10" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <solid android:color="#e84a01" />
        </shape>
    </item>
</selector>