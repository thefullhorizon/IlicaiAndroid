<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_12"
        android:layout_marginTop="@dimen/_16"
        android:text="项目详情"
        android:textColor="@drawable/home_btn_text_color"
        android:textSize="14sp"></TextView>

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_alignLeft="@+id/tv_tab"
        android:layout_alignRight="@+id/tv_tab"
        android:layout_below="@+id/tv_tab"
        android:background="@color/main_red_color"
        android:visibility="invisible"></View>
</RelativeLayout>
