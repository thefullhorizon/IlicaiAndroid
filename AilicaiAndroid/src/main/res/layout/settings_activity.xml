<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:manyi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_background"
    android:orientation="vertical">

    <com.ailicai.app.widget.IWTopTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        manyi:hasLeft="true"
        manyi:titleview_title_text="个人设置" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <View style="@style/cell_divider_hor" />

        <RelativeLayout
            android:id="@+id/change_phone"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/white_to_pressed_selector"
            android:clickable="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <TextView
                style="@style/text_16_212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="电话" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_phone_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:background="@drawable/account_arrow_selector" />
            </LinearLayout>


        </RelativeLayout>

        <View
            style="@style/cell_divider_hor"
            android:layout_marginLeft="16dp" />

        <RelativeLayout
            android:id="@+id/check_real_name"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/white_to_pressed_selector"
            android:clickable="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <TextView
                style="@style/text_16_212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="实名认证" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:background="@drawable/account_arrow_selector" />
            </LinearLayout>

        </RelativeLayout>

        <View
            style="@style/cell_divider_hor"
            android:layout_marginLeft="16dp" />

        <RelativeLayout
            android:id="@+id/change_transaction_password"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/white_to_pressed_selector"
            android:clickable="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <TextView
                style="@style/text_16_212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="修改交易密码" />

            <View
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/account_arrow_selector" />

        </RelativeLayout>

        <View style="@style/cell_divider_hor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/white_to_pressed_selector"
        android:orientation="vertical">

        <View style="@style/cell_divider_hor" />

        <TextView
            style="@style/text_16_212121"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="退出登录" />

        <View style="@style/cell_divider_hor" />
    </LinearLayout>


</LinearLayout>