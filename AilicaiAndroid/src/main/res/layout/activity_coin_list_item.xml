<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:manyi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/global_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:padding="16dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/coin_number_title_left"
                style="@style/text_12_757575"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目编号"/>

            <TextView
                android:id="@+id/coin_number_value_left"
                style="@style/text_12_212121"
                android:layout_below="@+id/coin_number_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/hold_capital_title_middle"
                style="@style/text_12_757575"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持有金额"/>

            <TextView
                android:id="@+id/hold_capital_value_middle"
                style="@style/text_12_212121"
                android:layout_below="@+id/hold_capital_title_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/real_profit_title_right"
                style="@style/text_12_757575"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际收益"/>

            <TextView
                android:id="@+id/real_profit_value_right"
                style="@style/text_12_212121"
                android:layout_below="@+id/real_profit_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_e6e6e6"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:paddingTop="11dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:id="@+id/previous_coin_info_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_12_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原项目信息"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/account_arrow_selector"/>

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_e6e6e6"/>

            <LinearLayout
                android:id="@+id/loan_contract_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_12_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借款合同"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/account_arrow_selector"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>