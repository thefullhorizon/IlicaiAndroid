<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dip"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <com.manyi.lovehouse.widget.tfwidget.TextViewTF
            android:id="@+id/text_hot_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_16"
            android:layout_marginRight="@dimen/_8"
            android:background="@drawable/bg_black_a10_selector_round"
            android:gravity="center"
            android:text="@string/home_notice_trumpet"
            android:textColor="@color/color_616161"
            android:textSize="14sp" />

        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_hot_tip"
            android:flipInterval="4000"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentBottom="true"
        android:background="@color/color_e6e6e6"/>

</RelativeLayout>