<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dcdada" />

    <ListView
        android:id="@+id/transaction_filter_type_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="#dddddd"
        android:dividerHeight="1px"
        android:listSelector="@drawable/list_selector_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dcdada" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_filter_start_date"
                style="@style/text_14_333333_e84a01"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_transaction_filter_selector"
                android:gravity="center"
                android:text="2015-12-01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:text="至"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_filter_end_date"
                style="@style/text_14_333333_e84a01"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_transaction_filter_selector"
                android:gravity="center"
                android:text="2015-12-30" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_query"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/_16"
            android:layout_marginRight="@dimen/_16"
            android:layout_weight="3.0"
            android:background="@drawable/button_transaction_filter_selector"
            android:gravity="center"
            android:text="确认"
            android:textColor="#212121"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>