<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:manyi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/dialog_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corners_dialog_bg_8dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.ailicai.app.widget.RoundedImageView.RoundedImageView
        android:id="@+id/iv_top_bg"
        android:scaleType="fitXY"
        manyi:riv_corner_radius_top_left="8dp"
        manyi:riv_corner_radius_top_right="8dp"
        android:src="@drawable/popup_fix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:paddingLeft="32dp"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="系统维护中"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvBackTime"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:text="几月几日"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </FrameLayout>

    <TextView
        android:textSize="16sp"
        android:textColor="#212121"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="12dp"
        android:paddingTop="16dp"
        android:lineSpacingExtra="5dp"
        android:text="亲爱的爱理财用户："
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvFixDesc"
        android:textSize="14sp"
        android:textColor="#212121"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="12dp"
        android:lineSpacingExtra="5dp"
        android:text="当前系统正在升级维护中，维护期间暂停爱理财和钱包相关服务（转入、转出、购买、转让等），预计在xx月xx日xx点前恢复使用。望提前知晓，给你带来不便，还请谅解。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/tvIKown"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="我知道了"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/round_corner_btn_bg"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>
</LinearLayout>