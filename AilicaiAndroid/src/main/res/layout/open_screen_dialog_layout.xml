<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:manyi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ailicai.app.widget.RoundedImageView.RoundedImageView
            android:id="@+id/riv_open_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            manyi:riv_corner_radius="8dp" />

    </RelativeLayout>

    <com.ailicai.app.widget.TextViewTF
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/closeic"
        android:textColor="@color/white_90_color"
        android:textSize="30sp" />


</LinearLayout>