<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:manyi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/circle_background"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.ailicai.app.widget.IWToolbar
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:elevation="4dp"
        manyi:hasLeft="true"
        manyi:isDark="true"
        manyi:titleview_title_text="数据收集" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/_8"
        android:background="#ffffffff"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/title_left_back_icon"
                    style="@style/imgBtnBorderlessStyle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_arrow_back_gray_24dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/clean_log_btn"
                    style="@style/imgBtnBorderlessStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="清除Log"
                    android:textColor="@color/main_red_color_dark" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black_10_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="当前校验的时间差:" />

                <TextView
                    android:id="@+id/currentdiff_time_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="5415645"
                    android:textColor="@color/main_red_color"
                    android:textSize="@dimen/_20" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black_10_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="历史校验的时间差(有出现时差变化，可截图保留):" />


                <TextView
                    android:id="@+id/log_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:text="asdasdasd \nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd\nasdasdasd"
                    android:textColor="@color/white" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black_10_color" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
