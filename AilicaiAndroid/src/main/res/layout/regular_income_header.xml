<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/global_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <View
        style="@style/cell_divider_hor"
        android:layout_marginTop="8dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:paddingBottom="@dimen/_16"
                android:paddingLeft="@dimen/_16"
                android:paddingTop="@dimen/_16"
                android:text="累计收益(元)"
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.ailicai.app.widget.TextViewTF
                android:id="@+id/tv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_16"
                android:paddingLeft="@dimen/_8"
                android:paddingRight="@dimen/_8"
                android:paddingTop="@dimen/_16"
                android:text="@string/help_ic"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/income_header_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dip"
            android:alpha="0.87"
            android:text="+1987.29"
            android:textColor="#E84A01"
            android:textSize="18sp" />


    </LinearLayout>


</LinearLayout>
