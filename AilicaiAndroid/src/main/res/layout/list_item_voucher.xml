<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/_16"
    android:paddingRight="@dimen/_16"
    android:paddingTop="@dimen/_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rl_coupon_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_use"
            android:background="@drawable/ticket_available_normal_l">

            <RelativeLayout
                android:id="@+id/rl_money_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_money_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="@dimen/_1"
                    android:text="+"
                    android:textColor="@color/color_e84a01"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_voucher_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/tv_money_unit"
                    android:text="0.5%"
                    android:textColor="@color/color_e84a01"
                    android:textSize="30sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_voucher_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_14"
                android:text="吉爱财加息券"
                android:textColor="@color/color_757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_voucher_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_voucher_type"
                android:layout_marginRight="@dimen/_14"
                android:text="30天以上可用"
                android:textColor="@color/color_757575"
                android:textSize="12sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1"
                android:layout_below="@+id/rl_money_count"
                android:layout_marginTop="4dp"
                android:background="#ededed"></View>

            <TextView
                android:id="@+id/tv_voucher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_money_count"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp"
                android:text="加息券01"
                android:textColor="@color/color_757575"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_voucher_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_voucher_name"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:text="投资加息奖励"
                android:textColor="@color/color_757575"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_voucher_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_voucher_desc"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:text="2017-389-122"
                android:textColor="@color/color_757575"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_use"
            style="@style/text_14_ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rl_coupon_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/rl_coupon_content"
            android:background="@drawable/select_voucher_btn_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/_12"
            android:paddingRight="@dimen/_12" />
    </RelativeLayout>
    ¬
</RelativeLayout>