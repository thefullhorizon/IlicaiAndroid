    <style name="CustomPopAnimOnMiddle">
        <item name="android:windowEnterAnimation">@anim/anim_pop_start_top_middle</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_end_top_middle</item>
    </style>

    <style name="CustomPopAnimOnRight">
        <item name="android:windowEnterAnimation">@anim/anim_pop_start_top_right</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_end_top_right</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="textview_openaccount_current_step_center">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#f75a14</item>
    </style>

